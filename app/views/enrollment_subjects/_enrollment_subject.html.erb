<li>  
  <p>
    <h3><%= enrollment_subject.subject.name %></h3>
    <% if !enrollment_subject.status %>
    <%= form_for enrollment_subject do |f| %>
      <%= f.hidden_field :status, value: true %>
      <%= f.submit "Completed", class: "btn btn-primary" %>
    <% end %>
  <% else %>
    <input type="button" value="Finish"/>
  <% end %>
  </p>
  <p>
  <%= render enrollment_subject.subject.enrollment_tasks.all %>
  </p>  
</li>
