<% if logged_in? %>
  <% if !@activities.nil? %>
    <% provide :title, "Course activities" %>
    <h1>Activities</h1>   
    <ul class="users">
      <%= render @activities %>
    </ul>   
  <% end %>
<% else %>
  <div class="center jumbotron">
    <h1>Welcome to Framgia Training System</h1>
    <h2>
      This is the home page for the
      <a href="http://www.railstutorial.org/">Ruby on Rails Tutorial</a>
      Framgia Training System.
    </h2>
  </div>
  <%= link_to image_tag("rails.png", alt: "Rails logo"), 'http://rubyonrails.org/images/' %>
<% end %>