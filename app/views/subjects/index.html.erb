<h1>All Subjects</h1>
<table class="table">
  <thead>
    <tr>
      <th>id</th>
      <th>Name</th>
      <th>Description</th>
    </tr>
  </thead>
  <tbody>
    <% @subjects.each do |subject| %>
      <tr>
        <th scope="row"><%= subject.id %></th>
        <td>
          <%= link_to subject.name, user_subject_path(current_user, subject) %>
        </td>
        <td><%= subject.description %></td>
      </tr>
    <% end %>
  </tbody>
</table>