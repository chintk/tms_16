<% provide(:title, @subject.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= @subject.name %>
      </h1>
      <%= @subject.description %>
    </section>    
  </aside>
  <div class="col-md-8"> 
  <% if @tasks.any? %>
      <h3>Tasks (<%= @tasks.count %>)</h3>
      <ol class="entries">
        <%= render @tasks %>
      </ol>
    <% end %>   
  </div>
</div>
